{
  "name": "wordwise",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "AI-powered writing assistant with Firebase emulator support",
  "scripts": {
    "dev": "concurrently \"npm run emulator\" \"vite\"",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "setup": "chmod +x scripts/*.sh && bash scripts/setup-emulator.sh",
    "emulator": "firebase emulators:start --import=./emulator-data --export-on-exit=./emulator-data",
    "emulator:clean": "rm -rf emulator-data && firebase emulators:start",
    "test": "vitest",
    "kill-ports": "./scripts/kill-ports.sh"
  },
  "dependencies": {
    "@tiptap/extension-character-count": "^2.14.0",
    "@tiptap/extension-placeholder": "^2.14.0",
    "@tiptap/pm": "^2.14.0",
    "@tiptap/react": "^2.14.0",
    "@tiptap/starter-kit": "^2.14.0",
    "@types/node": "^24.0.3",
    "@types/react-router-dom": "^5.3.3",
    "firebase": "^10.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.2",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "firebase",
    "emulator",
    "react",
    "writing",
    "ai",
    "typescript",
    "vite"
  ],
  "author": "WordWise Team",
  "license": "MIT"
}
