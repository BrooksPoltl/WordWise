{
  "name": "wordwise",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "AI-powered writing assistant with Firebase emulator support",
  "scripts": {
    "dev": "concurrently \"npm run emulator\" \"vite\"",
    "build": "npm run typecheck && npm run lint && npm run test && vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:check": "eslint . --ext ts,tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:all": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "check-all": "npm run typecheck && npm run lint:check && npm run format:check",
    "fix-all": "npm run lint:fix && npm run format",
    "preview": "vite preview",
    "setup": "chmod +x scripts/*.sh && bash scripts/setup-emulator.sh",
    "emulator": "firebase emulators:start --import=./emulator-data --export-on-exit=./emulator-data",
    "emulator:clean": "rm -rf emulator-data && firebase emulators:start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "kill-ports": "./scripts/kill-ports.sh",
    "lint:summary": "./scripts/lint-summary.sh"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.3.3",
    "@codemirror/language": "^6.11.1",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.37.2",
    "@floating-ui/react": "^0.27.12",
    "@lezer/highlight": "^1.2.1",
    "@tiptap/core": "^2.14.0",
    "@tiptap/extension-character-count": "^2.14.0",
    "@tiptap/extension-placeholder": "^2.14.0",
    "@tiptap/pm": "^2.14.0",
    "@tiptap/react": "^2.14.0",
    "@tiptap/starter-kit": "^2.14.0",
    "@types/nlcst": "^2.0.3",
    "@types/node": "^24.0.3",
    "@types/nspell": "^2.1.6",
    "@types/react-router-dom": "^5.3.3",
    "@types/unist": "^3.0.3",
    "@uiw/react-codemirror": "^4.23.13",
    "codemirror": "^6.0.2",
    "dictionary-en": "^4.0.0",
    "firebase": "^10.7.1",
    "harper.js": "^0.44.0",
    "nlcst-to-string": "^4.0.0",
    "prosemirror-model": "^1.25.1",
    "prosemirror-state": "^1.4.3",
    "prosemirror-view": "^1.40.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.2",
    "retext": "^9.0.0",
    "retext-english": "^5.0.0",
    "retext-equality": "^7.1.0",
    "retext-passive": "^5.0.0",
    "retext-readability": "^8.0.0",
    "retext-simplify": "^8.0.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "use-debounce": "^10.0.5",
    "vfile": "^6.0.3",
    "vfile-message": "^4.0.2",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.3.6",
    "text-encoding": "^0.7.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "whatwg-fetch": "^3.6.20"
  },
  "keywords": [
    "firebase",
    "emulator",
    "react",
    "writing",
    "ai",
    "typescript",
    "vite"
  ],
  "author": "WordWise Team",
  "license": "MIT"
}
